{
  "schemaVersion": 1,
  "id": "fablinapi",
  "version": "${version}",

  "name": "Fablin API",
  "description": "Fablin API is a Minecraft library mod providing utilities for Kotlin mod developers.",
  "authors": [
    "RedstoneParadox",
    "EternalFrost"
  ],
  "contact": {
    "homepage": "https://github.com/RedstoneParadox/FablinAPI",
    "sources": "https://github.com/RedstoneParadox/FablinAPI"
  },

  "license": "Apache-2.0",
  "icon": "assets/fablin/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "io.github.fablinmc.fablin.FablinAPIKt::init"
    ]
  },
  "mixins": [
    "fablin.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.11.1",
    "fabric": ">=0.29.4",
    "fabric-language-kotlin": "*",
    "minecraft": "1.16.x"
  }
}
